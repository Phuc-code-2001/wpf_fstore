<Application x:Class="SalesWPFApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SalesWPFApp"
             StartupUri="WindowLogin.xaml">
    <Application.Resources>
        <Style x:Key="TextAppName" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="#FF00F668"></Setter>
            <Setter Property="FontSize" Value="38"></Setter>
            <Setter Property="Margin" Value="10,30"></Setter>
            <Setter Property="Padding" Value="10,5"></Setter>
            <Setter Property="FontFamily" Value="Bell MT"></Setter>
        </Style>
        <Style x:Key="textLight" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="Foreground" Value="#ffffff"></Setter>
        </Style>
    </Application.Resources>
</Application>
